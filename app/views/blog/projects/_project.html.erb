<div class='col-sm-12 col-lg-6'>
    <div class="card">
        <div class="card-topper" style='backgroud-image: url();'></div>
        <div class="card-block">
            <h4 class="card-title"><%= link_to project.title, project %></h4>
            <p class="published-date"><%= project.display_day_published %></p>
            <p class="card-text"><%= truncate(project.description, length: 130) %></p>
            <%= link_to 'Read More', project, class: 'btn btn-secondary' %>
        </div>
    </div>
</div>
